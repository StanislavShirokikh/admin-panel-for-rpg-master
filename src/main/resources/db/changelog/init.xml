        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">
    <changeSet id="init-race" author="Stanislav">
        <preConditions>
            <not>
                <tableExists tableName="race"/>
            </not>
        </preConditions>
        <sql>
            CREATE TABLE race
            (
                id   SERIAL PRIMARY KEY,
                name VARCHAR NOT NULL
            );
        </sql>
    </changeSet>










